# Backend Configuration
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=sqlite:///./assessment.db
# For PostgreSQL: postgresql://user:password@localhost:5432/assessment_db

# API Settings
API_V1_PREFIX=/api/v1
API_TITLE=Assessment Tool API
API_VERSION=1.0.0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# AI/ML Services
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL_PRIMARY=llama-3.1-8b-instant
GROQ_MODEL_FALLBACK=llama-3.3-70b-versatile

# External APIs (for real data integration)
MCA_API_KEY=your-mca-api-key
MCA_API_URL=https://api.mca.gov.in/v1
GST_API_KEY=your-gst-api-key
GST_API_URL=https://api.gst.gov.in/v1

# Social Media APIs (Chapter 2)
FACEBOOK_API_KEY=your-facebook-api-key
INSTAGRAM_API_KEY=your-instagram-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Azure Settings (for deployment)
AZURE_KEY_VAULT_NAME=your-keyvault-name
AZURE_STORAGE_ACCOUNT=your-storage-account
